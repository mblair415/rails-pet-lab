<%= form_for @owner, url: '/users' do |f| %>
  <div class="form-group">
    <%= f.text_field :first_name, class: "form-control", placeholder: "First Name", autofocus: true %>
  </div>
  <div class="form-group">
    <%= f.text_field :last_name, class: "form-control", placeholder: "Last Name" %>
  </div>
  <div class="form-group">
    <%= f.email_field :email, class: "form-control", placeholder: "Email" %>
  </div>
  <div class="form-group">
    <%= f.telephone_field :phone, class: "form-control", placeholder: "Phone Number" %>
  </div>
  <div class="form-group">
    <%= f.password_field :password, class: "form-control", placeholder: "password" %>
  </div>
  <div class="form-group">
    <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirm your password" %>
  </div>

  <div class="form-group">
    <%= f.submit "Save Owner", class: "btn btn-block btn-success" %>
  </div>
<% end %>

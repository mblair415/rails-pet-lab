<%= form_for [@owner, @pet], url: { action: "create" } do |f| %>
  <div class="form-group">
    <%= f.text_field :name, class: "form-control", placeholder: "Pet Name", autofocus: true %>
  </div>
  <div class="form-group">
    <%= f.text_field :breed, class: "form-control", placeholder: "Pet Breed" %>
  </div>
  <div class="form-group">
    <%= f.submit "Save Pet", class: "btn btn-block btn-success" %>
  </div>
<% end %>
